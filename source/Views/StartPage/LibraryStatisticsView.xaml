                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Library" Binding="{Binding LibrarySource.Name}" Width="Auto" IsReadOnly="True"/>
